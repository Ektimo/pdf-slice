{
    "compilerOptions": {
        "outDir": "./built",
        "target": "es6",
        "module": "commonjs",
        "typeRoots" : ["./node_modules/@types"],
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strict": true,
        "sourceMap": true,
        "lib": ["es2015"]
    },
    "include": [
        "src/**/*"
    ]
}